# VIP {{ keepalived_vip }}
vrrp_instance VIP {
{% if keepalived_master == inventory_hostname %}
   state MASTER
   virtual_router_id 100
   priority 100
{% else %}
   state BACKUP
   virtual_router_id 50
   priority 100
{% endif %}
   interface {{ keepalived_interface }}
   advert_int 1
   authentication {
        auth_type PASS
        auth_pass {{ keepalived_passwd }}
   }
   virtual_ipaddress {
        {{ keepalived_vip }}
   }
}

